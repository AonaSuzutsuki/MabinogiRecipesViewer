<?xml version="1.0" encoding="utf-8" ?> 
<queries>
    <query id="test1">
        <sql>
            SELECT
                *
            FROM
                TABLE
            WHERE
                ID = {$ID}
        </sql>
    </query>
    <query id="test2">
        <sql>
            SELECT
                *
            FROM
                TABLE
            WHERE
                ID = {$ID}
                {$addCond}
        </sql>
        <states>
            <state id="addCond">
                , NAME = {$NAME}
            </state>
        </states>
    </query>
</queries>